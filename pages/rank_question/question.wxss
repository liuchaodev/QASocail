/**index.wxss**/

.root{
  padding-bottom: 40rpx;
}
.top_divideline {
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 1rpx;
  background: #F2F2F2;
}

.banners {
  width: 100%;
  height: 280rpx;
}

.page-section {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
}

.page-section-spacing {
  box-sizing: border-box;
}

.banner {
  position: relative;
  padding-right: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.function_enter_container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 50rpx;
}

.function_container {
  display: flex;
  flex-direction: column;
}

.function_pic {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.function_name {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #030303;
  letter-spacing: -0.41px;
  text-align: center;
}

.question_item {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
 
}

.question_person_and_star {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.question_person {
  display: flex;
  flex-direction: row;
  text-align: center;
  padding: 20rpx;
}

.question_person_header {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #efefef
}

.question_person_nickname {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-top: 21rpx;
  margin-left: 20rpx;
}

.question_star {
  display: flex;
  flex-direction: row;
  text-align: center;
  padding: 20rpx;
}

.question_star_num {
  color: #ffdf01;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.question_remark {
  font-size: 30rpx;
  color: #333;
  text-align: justify;
  margin-right: 40rpx;
  margin-left: 100rpx;
  line-height: 1.5;



  margin-bottom: 20rpx;

display: -webkit-box;
 word-break: break-all;
 text-overflow: ellipsis;

 overflow: hidden;
 -webkit-box-orient: vertical;
 -webkit-line-clamp:2;



}

.comment_and_thumb_container {
  display: flex;
  flex-direction: row-reverse;
  right: 40rpx;
}

.comment_and_thumb_icon {
  height: 30rpx;
  width: 30rpx;
}

.thumb_container {
  margin-left: 30rpx;
  margin-right: 40rpx;
}

.comment_and_thumb_text {
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

.time_left {
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.question_item_innder_divideline{
  height: 1rpx;
  width: calc(100% - 140rpx);
  background: #F2F2F2;
  margin-top: 30rpx;
  margin-right: 70rpx;
  margin-left: 70rpx;
}
.tell_somebody{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
  font-size: 28rpx;
color: #F5D600;

}
.home_top_title{
  margin-top: 50rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.home_top_title_left{
  font-size: 36rpx;
color: #333333;
 font-weight: bold;
letter-spacing: 0.11px;
text-align: center;
}
.home_top_title_right{
  display: flex;
  flex-direction: row;
}
.home_top_title_right_text{
 
  font-size: 26rpx;
color: #666666;
letter-spacing: -0.41px;
text-align: center;
}
.home_top_title_right_image{
  margin-left: 10rpx;
  margin-top: 8rpx;
  width: 20rpx;
  height: 25rpx;
}

.top_image_container{
  height: 240rpx;
    margin-top: 30rpx;
    padding-left: 30rpx;
      padding-right: 30rpx;
}
.top_image{
  width: 100%;
  height: 100%;
}
.question_item_right{
  width: 100%;
