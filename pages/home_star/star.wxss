/* pages/home_star/star.wxss */

page {
  background-color: #efefef;
}

.get_star_title_container {
  text-align: center;
}

.get_star_title {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #f6f6f6;
  text-align: center;
}

.get_star_num {
  margin-top: 40rpx;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
}

.get_star_total_num {
  margin-top: 40rpx;
  font-size: 30rpx;
  color: #fbfbfb;
  letter-spacing: 1.34px;
  text-align: center;
  opacity: 0.7;
}

.get_star_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #7a1eff;
  padding-bottom: 40rpx;
}

.task_list_container {
  margin-top: 20rpx;
  background: white;
}

.task_title_container {
  padding-bottom: 25rpx;
  padding-top: 25rpx;
}

.task_title {
  font-size: 32rpx;
  color: #333;
  margin-left: 30rpx;
  font-weight: bold;
}
.task_divideline{
  background: #e8e8e8;
  height: 3rpx;
  margin-left: 30rpx;
}
.task_divideline_background{
  background: white
}
.task_container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: center;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.task_icon_container{
  padding-top: 5rpx;
}
.task_icon{
  width: 64rpx;
  height: 64rpx;
}
.task_left{
   display: flex;
  flex-direction: row;
}

.task_text{
   display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.task_text_top{
  font-size: 28rpx;
color: #333333;
font-weight: bold;
}
.task_text_bottom{
  margin-top: 5rpx;
font-size: 24rpx;
color: #666666;
}
.task_button{
  padding-top: 10rpx;
   padding-bottom: 10rpx;
   padding-left: 20rpx;
   padding-right: 20rpx;
  margin-top: 10rpx;
  border-radius: 18rpx;
   background: #FD7A3E;
   margin-right: 30rpx;
   text-align: center;
   font-size: 20rpx;
color: #FFFFFF;
}
