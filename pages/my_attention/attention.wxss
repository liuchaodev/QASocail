/* pages/my_attention/attention.wxss */

.root {
  padding-bottom: 50rpx;
}

.top_divideline {
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 1rpx;
  background: #f2f2f2;
}

.my_info_container {
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  padding-top: 50rpx;
  padding-bottom: 20rpx;
  background: white;
}

.my_info_pic_container {
  position: relative;
}

.my_info_pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.my_info_vip_pic {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0rpx;
  bottom: 20rpx;
}

.my_info_name {
  margin-left: 20rpx;
  height: 100rpx;
  margin-top: 25rpx;
  font-size: 34rpx;
  color: #030303;
  text-align: center;
}

.attention_item_content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: center;
  background: #fff;
}

.attention_item_button_text {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 30%;
  border-radius: 16rpx;
  background: #e6eaf3;
  margin-right: 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #030303;
}

.my_common_item_container_with_divideline {
  display: flex;
  flex-direction: column;
}

.my_common_item_divider_background {
  background: white;
}

.my_common_item_divider {
  background: #e8e8e8;
  margin-left: 30rpx;
  height: 3rpx;
}
