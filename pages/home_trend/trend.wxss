/**index.wxss**/
page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #efefef;
}
.root{
 padding-bottom: 20rpx;
}

.header {
  width: 100%;
  background: white;
  display: flex;
  z-index: 9999;
  position: fixed;
  opacity: 1;
  flex-direction: row;
  justify-content: space-around;
}

.tab1_container {
  background: white;
  font-size: 30rpx;
  display: flex;
  padding-left: 50rpx;
  padding-right: 50rpx;
  flex-direction: column;
}

.tab2_container {
  background: white;
  font-size: 30rpx;
  display: flex; 
  padding-left: 50rpx;
  padding-right: 50rpx;
  flex-direction: column;
}

.tab_line_selected{
  margin-top: 8rpx;
  height: 5rpx;
  background: #F5D600;
}
.tab_text_selected{
  font-size: 28rpx;
  color: #F5D600;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.tab_line_unselected{
  margin-top: 8rpx;
  height: 5rpx;
  background: #fff;
}
.tab_text_unselected{
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.ask_me_container{
  margin-top: 120rpx;
}
.top_divideline {
  position: fixed;
  top: 0rpx;
  width: 100%;
  height: 1rpx;
  background: #F2F2F2;
}

.question_item {
  margin-left: 40rpx;
  margin-right: 40rpx;
  background: white;
  border-radius: 46rpx;
  margin-top: 30rpx;
  position: relative;
   box-shadow: 0px 1px 1px 1px #ddd;
}

.question_person_and_star {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.question_person {
  display: flex;
  flex-direction: row;
  text-align: center;
  padding: 30rpx;
}

.question_person_header {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #efefef
}

.question_person_nickname {
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-top: 21rpx;
  margin-left: 20rpx;
}

.question_star {
  display: flex;
  flex-direction: row;
  text-align: center;
  padding: 30rpx;
}

.question_star_num {
  color: #ffdf01;
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
}

.question_remark {
  font-size: 30rpx;
  color: #333;
  text-align: justify;
  margin-right: 40rpx;
  margin-left: 40rpx;
  line-height: 1.5;
  font-weight: bold;
}

.comment_and_thumb_container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row-reverse;
  right: 40rpx;
}

.comment_and_thumb_icon {
  height: 30rpx;
  width: 30rpx;
}

.thumb_container {
  margin-left: 30rpx;
  margin-right: 40rpx;
}

.comment_and_thumb_text {
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

.time_left {
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.question_item_innder_divideline{
  height: 3rpx;
  width: calc(100% - 140rpx);
  background: #F2F2F2;
  margin-top: 30rpx;
  margin-right: 70rpx;
  margin-left: 70rpx;
}

.tell_somebody{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
  font-size: 28rpx;
color: #F5D600;

}
.noMoreData{
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #878787
}


